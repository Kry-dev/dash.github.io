//Other Income
.row
    h5  Other Income
        a.btn
            i.fa.fa-plus-square-o
    .row
        table.table.table-sm.table-striped.table-bordered
            thead
                tr
                    th Type
                    th Description
                    th Owner
                    th Start Date
                    th Amount
                    th Pay Frequency
                    th Verified?
            tbody
                tr
                    td
                        select#incomeType.form-select
                            option(selected='') Civil Service
                            option Option 1
                            option Option 2
                            option Option 3

                    td
                        input#IncomeDescription.form-control(type="text" placeholder="Description")
                    td
                        select#incomeOwner.form-select
                            option(selected='') Joint
                            option Option 1
                            option Option 2
                            option Option 3
                    td
                        .input-group
                            .input-group-text
                                i.fa.fa-calendar
                            input#incomeStartDate.form-control(type='date' placeholder='mm/dd/yyyy')
                    td
                        input#IncomeAmount.form-control(type="text", placeholder="Amount")
                    td
                        select#PayFrequency.form-select
                            option(selected='') Monthly
                            option Option 1
                            option Option 2
                            option Option 3

                    td.d-flex.flex-row.justify-content-between.align-content-center
